{
  "manifest_version": 3,
  "name": "YouTube Video ID Scraper",
  "version": "1.1",
  "description": "Displays the video ID of the current YouTube video.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
